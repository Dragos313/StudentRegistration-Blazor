@using DemoBlazorServerApp.Models

@if (Students is not null || Students.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Specialization</th>
                <th>Tax</th>
                <th>Years</th>
                <th>Registration Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Students.Count; i++)
            {
                <StudentRecord RecordIndex=(i+1) Student="@Students[i]" StudentDelete="StudentDelete"></StudentRecord>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public List<StudentRegistration> Students { get; set; }

    [Parameter]
    public EventCallback<StudentRegistration> StudentDelete { get; set; }
}
